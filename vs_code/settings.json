{
    "shellcheck.run": "onSave",
    "shellcheck.enableQuickFix": true,
    "git.autofetch": true,
    "python.formatting.provider": "black",
    "python.pythonPath": "python",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "files.watcherExclude": {
        "*.json": true,
        "*.txt": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.venv/**": true,
        "**/data/**": true,
        "**/out/**": true
    },
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.testing.cwd": "./",
    "python.testing.pytestEnabled": true,
    "python.showStartPage": false,
    "csv-preview.lineNumbers": "ordinal",
    "csv-preview.separator": "\\t",
    "explorer.confirmDragAndDrop": false,
    "editor.fontFamily": "'mononoki Nerd Font Mono'",
    "workbench.startupEditor": "newUntitledFile",
    "editor.renderWhitespace": "boundary",
    "editor.snippetSuggestions": "bottom",
    "vim.surround": false,
    "vim.vimrc.enable": true,
    "vim.leader": " ",
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "leader",
                "m"
            ],
            "commands": [
                "python.refactorExtractMethod"
            ]
        },
    ],
    "editor.autoSurround": "never",
    "jupyter.sendSelectionToInteractiveWindow": false,
    "jupyter.askForKernelRestart": false,
    "python.languageServer": "Pylance",
    "files.exclude": {
        "**/.venv": true
    },
    "python.analysis.typeCheckingMode": "basic",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "python.linting.mypyEnabled": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "python.linting.flake8Args": [
        "--config=.flake8"
    ],
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "pallas": "linux",
        "birta": "linux",
        "maja": "linux",
        "ada": "linux"
    },
    "terminal.integrated.inheritEnv": true,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.tabs.enabled": true,
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "editor.detectIndentation": false,
    "bashIde.highlightParsingErrors": true,
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "python.defaultInterpreterPath": "python",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "[django-html]": {
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        }
    },
    "editor.formatOnSaveMode": "modifications",
    "[nginx]": {
        "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
    },
    "files.associations": {
        "*.conf": "nginx"
    },
    "editor.inlineSuggest.enabled": true,
    "files.insertFinalNewline": true,
}