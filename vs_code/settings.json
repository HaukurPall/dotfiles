    // Python settings
    "jupyter.sendSelectionToInteractiveWindow": false,
    "jupyter.askForKernelRestart": false,
    "python.formatting.provider": "none",
    "python.testing.cwd": "",
    "python.testing.pytestEnabled": true,
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.testing.unittestArgs": [],
    "python.linting.flake8Enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": [
        "--disable=line-too-long,logging-fstring-interpolation,logging-not-lazy,missing-function-docstring",
        "--generated-members=torch.*"
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "git-rebase-todo": "gitlens.rebase"
    },
    // remote ssh settings
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "pallas": "linux",
        "birta": "linux",
        "maja": "linux",
        "ada": "linux",
        "rassi": "linux"
    },
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.tabs.enabled": true,
    // Editor settings
    "editor.autoSurround": "never",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": [
        "source.formatDocument",
        "source.organizeImports",
        "source.fixAll",
    ],
    "editor.renderWhitespace": "boundary",
    "editor.fontFamily": "'mononoki Nerd Font Mono'",
    "editor.snippetSuggestions": "bottom",
    "editor.inlineSuggest.enabled": true,
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "relative",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "editor.detectIndentation": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.startupEditor": "newUntitledFile",
    // VS code update settings
    "extensions.autoUpdate": false,
    "update.mode": "manual",
    // File explorer settings
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
        "*.json": true,
        "*.txt": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.venv/**": true,
        "**/data/**": true,
        "**/out/**": true,
        "**/tmp/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/.git/**": true,
        "**/__pycache__/**": true,
    },
    // Specific language settings
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "[django-html]": {
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        }
    },
    "[nginx]": {
        "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
    },
    "files.associations": {
        "*.conf": "nginx"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": false
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    "[ignore]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[graphql]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "python.linting.flake8Args": [
        "--max-line-length",
        "120"
    ],
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.packageManager": "yarn",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.heatmap.locations": [
        "gutter",
        "line"
    ],
    "gitlens.defaultDateFormat": "MMMM Do YYYY",
    "gitlens.defaultTimeFormat": "H:mm:ss",
    "gitlens.defaultDateShortFormat": "D/M/YYYY",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
            {
                "before": [
                    "u"
                ],
                "after": [],
                "commands": [
                    {
                        "command": "undo"
                    }
                ]
            },
            {
                "before": [
                    "<C-r>"
                ],
                "after": [],
                "commands": [
                    {
                        "command": "redo"
                    }
                ]
            },
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "pylint.args": [
        "--disable=line-too-long,logging-fstring-interpolation,logging-not-lazy,missing-function-docstring",
        "--generated-members=torch.*,transformers.*"
    ],
    "flake8.args": [
        "--max-line-length",
        "120"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "redhat.telemetry.enabled": false,
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
}
